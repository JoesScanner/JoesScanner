<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Multi target: Android, iOS, MacCatalyst -->
    <TargetFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>

    <!-- Add Windows target when building on Windows -->
    <TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">
      $(TargetFrameworks);net9.0-windows10.0.19041.0
    </TargetFrameworks>

    <UseMaui>true</UseMaui>
    <SingleProject>true</SingleProject>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <MauiEnableXamlCBindingWithSourceCompilation>true</MauiEnableXamlCBindingWithSourceCompilation>
    <DefineConstants>$(DefineConstants);DISABLE_XAML_GENERATED_BREAK_ON_UNHANDLED_EXCEPTION</DefineConstants>


    <ApplicationTitle>JoesScanner</ApplicationTitle>
    <ApplicationId>com.companyname.joesscanner</ApplicationId>
    <ApplicationDisplayVersion>1.0.1</ApplicationDisplayVersion>
    <ApplicationVersion>1.0.1</ApplicationVersion>
    <DefaultLanguage>en-us</DefaultLanguage>

    <!-- Platform minimums -->
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">15.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">15.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
    <TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>

    <!-- No MSIX packaging for now; pure app deployment -->
    <WindowsPackageType>None</WindowsPackageType>
  </PropertyGroup>

  <!-- Explicit MAUI version for all packages -->
  <PropertyGroup>
    <!-- Set this to the MAUI 9 version you have installed -->
    <MauiVersion>9.0.90</MauiVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.0" />
    <PackageReference Include="Plugin.Maui.Audio" Version="4.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Use a dedicated PNG as the app icon -->
    <MauiIcon Include="Resources\AppIcon\appicon.png" />

    <MauiSplashScreen Include="Resources\Splash\joesscanner_splash.png" Color="#000000" />


    <!-- Keep all images, including citizenjoe.png, as regular images -->
    <MauiImage Include="Resources\Images\*" />

    <MauiFont Include="Resources\Fonts\*" />
    <MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <MauiXaml Update="Views\MainPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </MauiXaml>
  </ItemGroup>

</Project>
