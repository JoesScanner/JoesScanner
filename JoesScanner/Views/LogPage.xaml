<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JoesScanner.Views.LogPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:JoesScanner.Views.Controls"
    xmlns:models="clr-namespace:JoesScanner.Models"
    Title="Log"
    BackgroundColor="{StaticResource TabStripNavy}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid Padding="5,0,5,5" RowDefinitions="Auto,*" RowSpacing="6">

        <controls:AppTabStrip
            Grid.Row="0"
            SelectedTab="{x:Static models:AppTab.Log}" />

        <Border
            Grid.Row="1"
            StrokeThickness="0"
            BackgroundColor="{AppThemeBinding Light=White, Dark=#020617}"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand"
            Padding="12">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,24,24" />
            </Border.StrokeShape>

            <Grid RowDefinitions="44,*" ColumnDefinitions="*">

                <HorizontalStackLayout
                    Grid.Row="0"
                    Spacing="10"
                    HorizontalOptions="End"
                    Margin="0,0,0,10">

                    <Button
                        Text="Refresh"
                        Style="{StaticResource SecondaryPillButtonStyle}"
                        Clicked="OnRefreshClicked" />

                    <Button
                        Text="Copy"
                        Style="{StaticResource SecondaryPillButtonStyle}"
                        Clicked="OnCopyClicked" />

                </HorizontalStackLayout>

                <Editor
                    Grid.Row="1"
                    x:Name="LogEditor"
                    IsReadOnly="True"
                    AutoSize="Disabled"
                    FontFamily="Courier New"
                    FontSize="12"
                    TextColor="{AppThemeBinding Light=#111827, Dark=White}"
                    BackgroundColor="Transparent"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand" />

            </Grid>
        </Border>
    </Grid>
</ContentPage>
